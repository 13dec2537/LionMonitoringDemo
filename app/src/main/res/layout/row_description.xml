<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:id="@+id/XML_Linaer">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_header_rowdis"
                    android:weightSum="2">
                    <TextView android:id="@+id/XML_Parametername" android:layout_width="match_parent"
                        android:layout_height="30dp" android:layout_weight="1"
                        android:gravity="center"
                        android:text="TEST"
                        android:textSize="20dp"
                        android:textColor="#333"/>
                    <TextView android:id="@+id/XML_Unitname" android:layout_width="match_parent"
                        android:layout_height="30dp" android:layout_weight="1"
                        android:gravity="center"
                        android:text="TEST"
                        android:textSize="20dp"
                        android:textColor="#333"/>
                </LinearLayout>

                <TableRow android:layout_marginBottom="5dp" android:layout_marginTop="5dp" android:weightSum="2">

                    <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView android:id="@+id/XML_Standardvalue"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:textColor="#333"/>
                        <TextView android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="STANDARD"/>
                    </TableLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="45dp"
                        android:background="#333">
                    </View>



                    <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView android:id="@+id/XML_Actvalue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:textStyle="bold"/>
                        <TextView android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="NOW"/>
                    </TableLayout>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>