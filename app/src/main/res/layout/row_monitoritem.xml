<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Linearalltower2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:elevation="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        app:cardBackgroundColor="#20f6f6f6"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1.01">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="85dp"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center_vertical">
                        <com.makeramen.roundedimageview.RoundedImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/imvMachine"
                            android:src="@drawable/person"
                            android:scaleType="fitCenter"
                            app:riv_corner_radius="10dip"
                            app:riv_mutate_background="true"
                            android:layout_height="80dp"
                            android:layout_width="80dp" />

                        <ImageView
                            android:id="@+id/shapeIconOnline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/shape_round_online"
                            android:layout_gravity="bottom"/>
                    </FrameLayout>
                </LinearLayout>
                <View
                    android:layout_width="5dp"
                    android:background="@android:color/transparent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp">
                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp">


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Linear_txtname">

                        <TextView
                            android:text="mc_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/mc_name"
                            android:layout_weight="1"
                            android:textSize="18dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="#E0E0E0"
                            android:textStyle="normal|bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/LinearAll_txt_1"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:text="Amp :"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/pram_1"
                            android:layout_weight="1.5"
                            android:width="1dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="#E0E0E0"
                            android:background="@android:color/transparent"
                            android:textSize="@dimen/activity_vertical_margin" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/act_1"
                            android:layout_weight="0.75"
                            android:width="1dp"
                            android:textAlignment="center"
                            android:background="@android:color/transparent"
                            android:textColor="#E0E0E0"
                            android:text="0"
                            android:textStyle="bold"
                            android:textSize="25dp" />

                        <TextView
                            android:text="RPM"
                            android:layout_height="wrap_content"
                            android:id="@+id/unit_1"
                            android:background="@android:color/transparent"
                            android:textColor="#E0E0E0"
                            android:layout_weight="0.20"
                            android:layout_width="35dp"
                            android:textSize="@dimen/activity_vertical_margin" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/LinearAll_txt_2"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:text="Apm :"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/pram_2"
                            android:layout_weight="1.5"
                            android:width="1dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="#E0E0E0"
                            android:textSize="@dimen/activity_vertical_margin" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/act_2"
                            android:layout_weight="0.75"
                            android:width="1dp"
                            android:textAlignment="center"
                            android:textColor="#E0E0E0"
                            android:text="0"
                            android:textStyle="bold"
                            android:textSize="25dp"/>

                        <TextView
                            android:text="RPM"
                            android:layout_height="wrap_content"
                            android:id="@+id/unit_2"
                            android:textColor="#E0E0E0"
                            android:layout_weight="0.20"
                            android:layout_width="35dp"
                            android:textSize="@dimen/activity_vertical_margin" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/LinearAll_txt_3"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp">
                        <TextView
                            android:text="Apm :"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/pram_3"
                            android:layout_weight="1.5"
                            android:width="1dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="#E0E0E0"
                            android:textSize="@dimen/activity_vertical_margin" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/act_3"
                            android:layout_weight="0.75"
                            android:width="1dp"
                            android:textAlignment="center"
                            android:textColor="#E0E0E0"
                            android:text="0"
                            android:textStyle="bold"
                            android:textSize="25dp" />

                        <TextView
                            android:text="RPM"
                            android:layout_height="wrap_content"
                            android:id="@+id/unit_3"
                            android:textColor="#E0E0E0"
                            android:layout_width="35dp"
                            android:layout_weight="0.20"
                            android:textSize="@dimen/activity_vertical_margin" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/LinearAll_txt_4"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:text="Apm :"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/pram_4"
                            android:layout_weight="1.5"
                            android:width="1dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="#E0E0E0"
                            android:textSize="@dimen/activity_vertical_margin" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/act_4"
                            android:layout_weight="0.75"
                            android:width="1dp"
                            android:textAlignment="center"
                            android:textColor="#E0E0E0"
                            android:text="0"
                            android:textStyle="bold"
                            android:textSize="25dp" />

                        <TextView
                            android:text="RPM"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/unit_4"
                            android:textColor="#E0E0E0"
                            android:layout_weight="0.20"
                            android:textSize="@dimen/activity_vertical_margin" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>