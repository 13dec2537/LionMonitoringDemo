<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/Lineareditstation"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.kuybeer26092016.lionmonitoringdemo.fragments.FragmentEditstation"
    android:background="@drawable/bg_app">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/station"
            android:layout_width="match_parent"
            android:enabled="true"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="30dp"
            android:textColor="#E0E0E0"
            android:background="#20f6f6f6"
            android:id="@+id/button"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:clickable="true"
            app:srcCompat="@drawable/ic_plus"
            android:id="@+id/XML_Fubaddstation"
            android:padding="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/XML_Pgeditstation"
        android:background="@android:color/transparent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/XML_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:layout_height="50dp">

    </LinearLayout>


</LinearLayout>
