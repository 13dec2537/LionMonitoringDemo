<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Linearalltower2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:background="?attr/colorControlHighlight">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="1dp"
        android:elevation="50dp"

        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="80dp"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp">
                    <ImageView
                        android:id="@+id/imvMachine"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="16dp" />

                    <ImageView
                        android:id="@+id/shapeIconOnline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/shape_round_online"
                        android:layout_gravity="bottom"/>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Linear_txtname">

                    <TextView
                        android:text="mc_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mc_name"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/background_dark"
                        android:textStyle="normal|bold" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/LinearAll_txt_1">

                    <TextView
                        android:text="Amp :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pram_1"
                        android:layout_weight="1.5"
                        android:width="1dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/activity_vertical_margin" />

                    <TextView
                        android:text=" : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/act_1"
                        android:layout_weight="0.75"
                        android:width="1dp"
                        android:textAlignment="center"
                        android:textColor="@android:color/holo_red_dark"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="16dp" />

                    <TextView
                        android:text="RPM"
                        android:layout_height="wrap_content"
                        android:id="@+id/unit_1"
                        android:textColor="@android:color/black"
                        android:layout_weight="0.10"
                        android:layout_width="35dp"
                        android:textSize="@dimen/activity_vertical_margin" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/LinearAll_txt_2">

                    <TextView
                        android:text="Apm :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pram_2"
                        android:layout_weight="1.5"
                        android:width="1dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/activity_vertical_margin" />

                    <TextView
                        android:text=" : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/act_2"
                        android:layout_weight="0.75"
                        android:width="1dp"
                        android:textAlignment="center"
                        android:textColor="@android:color/holo_red_dark"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="16dp" />

                    <TextView
                        android:text="RPM"
                        android:layout_height="wrap_content"
                        android:id="@+id/unit_2"
                        android:textColor="@android:color/black"
                        android:layout_weight="0.10"
                        android:layout_width="35dp"
                        android:textSize="@dimen/activity_vertical_margin" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/LinearAll_txt_3">

                    <TextView
                        android:text="Apm :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pram_3"
                        android:layout_weight="1.5"
                        android:width="1dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/activity_vertical_margin" />

                    <TextView
                        android:text=" : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/act_3"
                        android:layout_weight="0.75"
                        android:width="1dp"
                        android:textAlignment="center"
                        android:textColor="@android:color/holo_red_dark"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="16dp" />

                    <TextView
                        android:text="RPM"
                        android:layout_height="wrap_content"
                        android:id="@+id/unit_3"
                        android:textColor="@android:color/black"
                        android:layout_width="35dp"
                        android:layout_weight="0.10"
                        android:textSize="@dimen/activity_vertical_margin" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/LinearAll_txt_4">

                    <TextView
                        android:text="Apm :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pram_4"
                        android:layout_weight="1.5"
                        android:width="1dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/activity_vertical_margin" />

                    <TextView
                        android:text=" : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/act_4"
                        android:layout_weight="0.75"
                        android:width="1dp"
                        android:textAlignment="center"
                        android:textColor="@android:color/holo_red_dark"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="16dp" />

                    <TextView
                        android:text="RPM"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/unit_4"
                        android:textColor="@android:color/black"
                        android:layout_weight="0.09"
                        android:textSize="@dimen/activity_vertical_margin" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>